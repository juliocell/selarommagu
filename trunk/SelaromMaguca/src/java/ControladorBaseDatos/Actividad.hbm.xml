<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Actividad" table="ACTIVIDAD" lazy="false">

    <id name="Id">
		<column name="IdActividad" sql-type="number(10)" not-null="true"/>
	      <generator class="sequence">
			<param name="sequence">
				Id_actividad
			</param>
		  </generator>
    </id>
	
	<property name="Accion">
		<column name="Accion" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="Descripcion">
		<column name="DescripcionActividad" sql-type="varchar2(300)"/>
	</property>
	
	<property name="Tabla">
		<column name="NombreTabla" sql-type="varchar2(100)" not-null="true"/>
	</property>


  </class>
</hibernate-mapping>