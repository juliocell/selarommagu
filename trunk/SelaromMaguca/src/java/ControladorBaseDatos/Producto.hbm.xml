<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Producto" table="PRODUCTO" lazy="false">

    <id name="Id">
      <column name="IdProducto" sql-type="number(10)" not-null="true" />
      <generator class="sequence">
        <param name ="sequence">
          Id_producto
        </param>
      </generator>
    </id>

    <property name="NombreProducto" type="string">
      <column name="NombreProducto" sql-type="varchar2(100)" not-null="true"/>
    </property>

    <property name="DescripcionProducto" type="string">
      <column name="DecripcionProducto" sql-type="varchar2(300)" />
    </property>

    <property name="Imagen" type="string">
      <column name="Imagen" sql-type="varchar2(1000)" not-null="true"/>
    </property>

    <property name="InformacionExtra" type="string">
      <column name="InformacionExtra" sql-type="varchar2(300)" />
    </property>
    
    <bag name="Inventarios" inverse="true" lazy="true">
      <key column="fk_Producto"/>
      <one-to-many class="Inventario"/>
    </bag>


    <bag name="Categorias" lazy="true" table="Producto_Categoria" cascade="all">
      <key column="fk_Producto"/>
      <many-to-many column="fk_Categoria" class="Categoria"/>
    </bag>



  </class>
</hibernate-mapping>