<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="FormaPago" table="FORMAPAGO" lazy="false">

    <id name="Id">
		<column name="IdFormaPago" sql-type="number(10)" not-null="true" />
		<generator class="sequence">
			<param name ="sequence">
				Id_formapago
			</param>
		</generator>
    </id>

    <property name="NroTarjetaCredito">
		<column name="NroTarjetaCredito" sql-type="number(25)" not-null="true"/>
	</property>
	
	<property name="FechaVence">
		<column name="FechaVence" sql-type="Date" not-null="true"/>
	</property>
	
	<property name="CodSeguridad">
		<column name="CodSeguridad" sql-type="number(5)" not-null="true"/>
	</property>
	
	<property name="Marca">
		<column name="Marca" sql-type="varchar2(30)" not-null="true"/>
	</property>
	
	<property name="IdUsuario">
		<column name="FK_Usuario" sql-type="varchar2(30)" not-null="true"/>
	</property>

  <many-to-one name="Usuario" column="fk_Usuario" class="Usuario"/>
   
  
    
  </class>
</hibernate-mapping>