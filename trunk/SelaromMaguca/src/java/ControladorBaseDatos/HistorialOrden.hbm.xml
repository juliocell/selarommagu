<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="HistorialOrden" table="HISTORIALORDEN" lazy="false">

    <id name="Id">
		<column name="IdHistorial" sql-type="number(10)" not-null="true" />
		<generator class="sequence">
			<param name ="sequence">
				Id_historial
			</param>
		</generator>
    </id>

  <property name="Fecha">
		<column name="Fecha" sql-type="Date" not-null="true"/>
	</property>
	
	<property name="Estado">
		<column name="Estado" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="Descripcion">
		<column name="Descripcion" sql-type="varchar2(300)"/>
	</property>


  <many-to-one name="OrdenCompra" column="fk_IdOrden" class="Ordendecompra"/>


  </class>
  
</hibernate-mapping>