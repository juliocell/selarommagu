<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Proveedor" table="PROVEEDOR" lazy="false">

    <id name="Id">
		<column name="Rif" sql-type="varchar2(30)" not-null="true" />
		<generator class="assigned"/>
    </id>

    <property name="NombreProveedor">
		<column name="NombreProveedor" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="DireccionProveedor">
		<column name="DireccionProveedor" sql-type="varchar2(200)" not-null="true" />
	</property>
	
	<property name="FechaRegistro">
		<column name="FechaRegistro" sql-type="Date" not-null="true"/>
	</property>
	
	<property name="Email">
		<column name="Email" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="PaginaWeb">
		<column name="PaginaWeb" sql-type="varchar2(300)"/>
	</property>

    <bag name="Inventarios" inverse="true" lazy="true">
      <key column="fk_Proveedor"/>
      <one-to-many class="Inventario"/>
    </bag>
    
  </class>
</hibernate-mapping>