<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Factura" table="FACTURA" lazy="false">

    <id name="Id">
		<column name="IdFactura" sql-type="number(10)" not-null="true" />
		<generator class="sequence">
			<param name ="sequence">
				Id_factura
			</param>
		</generator>
    </id>

    <property name="Fecha">
		<column name="FechaFactura" sql-type="Date" not-null="true"/>
	</property>
	
	<property name="Monto">
		<column name="MontoTotal" sql-type="number(10,5)" not-null="true"/>
	</property>
	

    <one-to-one name="OrdenCompra" class="Ordendecompra"/>


    <bag name="DetalleFactura" inverse="true" lazy="true">
      <key column="fk_IdFactura"/>
      <one-to-many class="DetalleFactura"/>
    </bag>

  </class>
</hibernate-mapping>