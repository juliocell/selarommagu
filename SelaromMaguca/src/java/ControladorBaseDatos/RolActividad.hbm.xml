<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="RolActividad" table="ROLACTIVIDAD" lazy="false">

    <composite-id name="Id" class="PairIdComponent">
      <key-property name="Key1" column="Fk_Rol" type="System.Int32"/>
      <key-property name="Key2" column="Fk_Actividad" type="System.Int32"/>
    </composite-id>

    <many-to-one name="Rol" column="fk_Rol" class="Rol"/>
    <many-to-one name="Actividad" column="fk_Actividad" class="Actividad"/>

  </class>
</hibernate-mapping>