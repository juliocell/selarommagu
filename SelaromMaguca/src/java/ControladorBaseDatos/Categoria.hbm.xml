<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Categoria" table="CATEGORIA" lazy="false">

    <id name="Id">
		<column name="IdCategoria" sql-type="number(10)" not-null="true" />
		<generator class="sequence">
			<param name ="sequence">
				Id_categoria
			</param>
		</generator>
    </id>

    <property name="NombreCategoria">
		<column name="NombreCategoria" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="DescripcionCategoria">
		<column name="DescripcionCategoria" sql-type="varchar2(300)" />
	</property>
	
    <bag name="Productos" lazy="true" table="Producto_Categoria" cascade="all">
      <key column="fk_Categoria"/>
      <many-to-many column="fk_Producto" class="Producto"/>
    </bag>


    <bag name="Categorias" inverse="true" lazy="true">
      <key column="fk_Categoria"/>
      <one-to-many class="Categoria"/>
    </bag>

    <many-to-one name="CategoriaSuperior" column="fk_Categoria" class="Categoria"/>


  </class>
</hibernate-mapping>