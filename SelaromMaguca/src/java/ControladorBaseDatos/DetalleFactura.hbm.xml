<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="DetalleFactura" table="DETALLEFACTURA" lazy="false">

    <id name="Id">
		<column name="IdDetalleFac" sql-type="number(10)" not-null="true" />
			<generator class="sequence">
				<param name ="sequence">
					Id_detallefac
				</param>
			</generator>
    </id>

    <property name="CantidadProducto">
		<column name="CantidadProducto" sql-type="number(10)" not-null="true"/>
	</property>
	
	<property name="MontoTotal">
		<column name="MontoTotal" sql-type="number(10,5)" />
	</property>


   <many-to-one name="DetalleOrden" column="fk_IdDetalle" class="DetalleOrden"/>
    
   <many-to-one name="Inventario" column="fk_IdInventario" class="Inventario"/>

  </class>
</hibernate-mapping>