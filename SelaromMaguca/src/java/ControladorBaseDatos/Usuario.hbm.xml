<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ControladorBaseDatos" namespace="ControladorBaseDatos">

  <class name="Usuario" table="USUARIO" lazy="false">

    <id name="Id">
		<column name="CedulaPasaporte" sql-type="varchar2(20)" not-null="true" />
		<generator class="assigned"/>
    </id>

    <property name="Nombre">
		<column name="Nombre" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="Apellido">
		<column name="Apellido" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="Email">
		<column name="Email" sql-type="varchar2(100)" not-null="true"/>
	</property>
	
	<property name="FechaRegistro">
		<column name="FechaRegistro" sql-type="Date" not-null="true"/>
	</property>
	
	<property name="Tipo">
		<column name="Tipo" sql-type="varchar2(50)" not-null="true"/>
	</property>
	
	<property name="DireccionFisica">
		<column name="DireccionFisica" sql-type="varchar2(200)" not-null="true"/>
	</property>


  <many-to-one name="Rol" column="fk_IdRol" class="Rol"/>

    <bag name="FormasPago" inverse="true" lazy="true">
      <key column="fk_Usuario"/>
      <one-to-many class="FormaPago"/>
    </bag>

    <bag name="OrdenesDeCompra" inverse="true" lazy="true">
      <key column="fk_Usuario"/>
      <one-to-many class="Ordendecompra"/>
    </bag>
    

  </class>
</hibernate-mapping>